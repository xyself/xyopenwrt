name: N1 Generate diffconfig

on:
  workflow_dispatch:  # 手动触发
    inputs:
      ssh:
        description: 'SSH connection to Actions'
        required: false
        default: 'false'

env:
  REPO_URL: https://github.com/immortalwrt/immortalwrt
  REPO_BRANCH: openwrt-24.10
  DIFFCONFIG_DIR: diffconfig
  TELEGRAM_TOKEN: ${{ secrets.TELEGRAM_TOKEN }}
  TELEGRAM_CHAT_ID: ${{ secrets.TELEGRAM_CHAT_ID }}
  GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
  TZ: Asia/Shanghai

jobs:
  generate_diff:
    runs-on: ubuntu-24.04

    steps:
    - name: 检出源码
      uses: actions/checkout@main

    - name: 初始化环境
      run: |
        sudo apt-get update -y
        sudo apt-get install -y git
        sudo timedatectl set-timezone "$TZ"
        mkdir -p /workdir

    - name: 克隆 OpenWrt 源码
      working-directory: /workdir
      run: git clone $REPO_URL -b $REPO_BRANCH --single-branch --depth=1 openwrt

    - name: SSH 连接上传 diffconfig
      uses: P3TERX/ssh2actions@main
      if: github.event.inputs.ssh == 'true'
      with:
        # 配置 SSH host、user、key 等
        # 上传 diffconfig 到 /workdir/diffconfig/.config

    - name: 生成差异文件
      run: |
        mkdir -p /workdir/diff
        cp /workdir/diffconfig/.config /workdir/openwrt/.config
        cd /workdir/openwrt
        make defconfig
        # 生成差异文件，只包含修改部分
        scripts/diffconfig.sh > /workdir/diff/diffconfig.txt
        ls -l /workdir/diff/

    - name: 发布差异文件到 GitHub Release
      uses: softprops/action-gh-release@v2
      with:
        tag_name: diffconfig_$(date +'%Y%m%d')
        files: /workdir/diff/diffconfig.txt
        token: ${{ env.GITHUB_TOKEN }}

    - name: 发送 diffconfig 到 Telegram
      if: env.TELEGRAM_TOKEN != ''
      run: |
        DIFF_FILE=/workdir/diff/diffconfig.txt
        TELEGRAM_MSG="🎉 diffconfig 已生成并上传到 GitHub Release"
        # 发送文本消息
        curl -s -X POST "https://api.telegram.org/bot${{ env.TELEGRAM_TOKEN }}/sendMessage" \
          -d chat_id="${{ env.TELEGRAM_CHAT_ID }}" \
          -d text="$TELEGRAM_MSG"
        # 发送差异文件
        curl -s -X POST "https://api.telegram.org/bot${{ env.TELEGRAM_TOKEN }}/sendDocument" \
          -F chat_id="${{ env.TELEGRAM_CHAT_ID }}" \
          -F document=@"$DIFF_FILE" \
          -F caption="diffconfig 文件"
